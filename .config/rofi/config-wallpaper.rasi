
@import "~/.config/rofi/config.rasi"

/* ---- Configuration ---- */
configuration {
  modi: "drun";
}

window {
  width: 20%;
  height: 99%;
}

inputbar {
    enabled: false;
}

imagebox {
  orientation: vertical;
  children:
    ["listbox"];
}

listview {
  columns: 1;
  lines: 3;
}

element {
  orientation: vertical;
  padding: 0px;
  spacing: 0px;
}

element-icon {
  size: 20%;
}

element-text {
  font: "Fira Code SemiBold 12";
  vertical-align: 0.5;
  horizontal-align: 0.5;
}